generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id @default(uuid())
  username String @unique
  email String @unique
  password String
  posts Pin[]
  // profile Profile?
  // comments Comment[]
}

